.wrapper
  .wrapper__top
    = link_to '#', class: 'wrapper__top__icon' do 
      = image_tag asset_path('logo.png'), width: '140', alt: 'FURIMAロゴ'
    .wrapper__top__searchBox
      %input{ type: 'text', class: 'wrapper__top__searchBox__input', placeholder: 'キーワードから探す' }
      = link_to '#', class: 'wrapper__top__searchBox__icon' do
        = image_tag asset_path('icon-search 1.png'), width: '19', alt: '検索ボタン'

  .wrapper__bottom
    %ul
      -# %li
      -#   = link_to '#', class: 'wrapper__bottom--left', id: 'category-search-btn' do
      -#     カテゴリー
      -# %li
      -#   = link_to '#', class: 'wrapper__bottom--left', id: 'brand-search-btn' do
